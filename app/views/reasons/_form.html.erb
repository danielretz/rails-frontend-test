<%= simple_form_for reason do |f| %>
  <% if reason.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(reason.errors.count, "error") %> prohibited this reason from being saved:</h2>

      <ul>
        <% reason.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="px-4 pt-4 pb-1 w-full">
      <div class="mb-4">
        <%=
            f.input :label,
            label: 'Displayed reason',
            required: true,
            placeholder: 'Enter Displayed reason...',
            hint: "Provide a friendly description for the reason that will be displayed to the customer.",
            class: 'overwrite-simple-form'
        %>
        <%=
            f.input :code,
            label: 'Internal return code',
            required: true,
            placeholder: 'Enter Internal return code...',
            hint: "For internal use only. Must be unique. To aid in analytics, we do not recommend changing the code once set."
        %>
        <%= 
            f.input :active,
            label: 'Reason is visible to customers',
            hint: 'When hidden, this return reason is not offered as an option to the customers. Click on the eye icon to make the return reason visible.'
        %>
        <div class="flex items-start self-stretch justify-between"> 
          <%= button_tag "Delete", data: { action: "modal#delete"}, type: "button", class: "font-semibold rounded-lg py-2 px-5 bg-white border border-red-500 border-2 border-solid text-red-500" %> 
          <%= button_tag "Continue", data: { action: "modal#continue" }, type: "button", class: "font-semibold rounded-lg py-2 px-5 border border-solid border-2 border-yellow-500 bg-yellow-500 text-black" %>
        </div>
        <%= f.hidden_field :_destroy %>
      </div>
  </div>
<% end %>
