<%= simple_form_for storefront, data: { controller: 'nested-form', nested_form_index_value: 'NEW_RECORD' } do |form| %>

  <% if storefront.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(storefront.errors.count, "error") %> prohibited this storefront from being saved:</h2>

      <ul>
        <% storefront.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex-col flex-[1_0_0] items-center rounded-xl border border-solid border-gray-100 bg-gray-50">
    <ul role="list" class="divide-y divide-gray-100">
      <li class="flex p-4 items-center gap-6 self-stretch text-blue-500">
        <button type="button" data-action="nested-form#addAssociation" class="rounded-full w-6 h-6 bg-blue-600 text-white">
          +
        </button>
        <span class="rounded">
          Add Return Reason
        </span>
      </li>

      
      <% @storefront.reasons.ordered.each do |reason| %>
        <li>
          <%= render partial: 'reasons/reason', locals: { reason: reason } %>
        </li>
      <% end %>

      <div hidden data-nested-form-target="addItem"></div>
    </ul>

  </div>

  <div>
    <div>
      Remember to save your changes before leaving this page
    </div>
    <div>
      <%= form.submit 'Save', class: 'btn-primary' %>
    </div>
  </div>
<% end %>
